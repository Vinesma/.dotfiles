# BEHAVIOR
confirm-exit no
prepopulate-query-feeds yes
# RELOADING
# If using cron set to 'no'
refresh-on-startup no
# ARTICLE ITEMS
max-items 100
# BROWSER
browser "$HOME/.dotfiles/scripts/browser-newsboat.sh %u"

# FORMATS
#datetime-format "%b %d - %I:%M %p"
articlelist-format "%4i %f %D  %?T?|%-17T|  ?%t"
articlelist-title-format "Articles in feed '%T' (%u unread, %t total)"

# MACROS
macro p toggle-article-read

# COLORS
color background          white   black
color listnormal          white   black
color listfocus           black   blue   bold
color listnormal_unread   green   black
color listfocus_unread    black   blue   bold
color info                black   blue   bold
color article             white   black

highlight article "(^Feed:.*|^Title:.*|^Author:.*)" cyan default bold
highlight article "(^Link:.*|^Date:.*)" default default
highlight article "https?://[^ ]+" green default
highlight article "^(Title):.*$" blue default
highlight article "\\[[0-9][0-9]*\\]" magenta default bold
highlight article "\\[image\\ [0-9]+\\]" green default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" green default bold
highlight article ":.*\\(link\\)$" cyan default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" magenta default

# KILLFILE

# ignore retweets in twitter feeds
ignore-article "*" "link =~ \"nitter.net\" and title =~ \"RT by\""
# ignore any Gmod from the yogs
ignore-article "https://www.youtube.com/feeds/videos.xml?channel_id=UCH-_hzb2ILSCo9ftVSnrCIQ" "title =~ \"Gmod \""
# ignore AO VIVO and VÍDEOS
ignore-article "https://g1.globo.com/rss/g1/pe/petrolina-regiao/" "title =~ \"AO VIVO\""
ignore-article "https://g1.globo.com/rss/g1/pe/petrolina-regiao/" "title =~ \"VÍDEOS\""

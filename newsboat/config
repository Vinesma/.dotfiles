# BEHAVIOR
confirm-exit no
# RELOADING
# If using cron set to 'no'
refresh-on-startup no
# ARTICLE ITEMS
max-items 50
# BROWSER
browser "mpv --profile=youtube720p %u"
# NOTIFIER
notify-program /usr/bin/notify-send
notify-format "newsboat: %f unread feeds (%n total unread articles)"

# FORMATS
datetime-format "%b %d - %I:%M %p"
articlelist-format "%4i %f %D  %?T?|%-17T|  ?%t"

# COLORS
color background          white   black
color listnormal          white   black
color listfocus           default blue   bold
color listnormal_unread   green   black
color listfocus_unread    default   blue   bold
color info                default blue   bold
color article             white   black
